<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    layout_height=""
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        <com.hcmes.viewdemo.l6.PaintView
            android:id="@+id/paintView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <com.hcmes.viewdemo.l6.Bezier
            android:id="@+id/bezier"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:layout_constraintTop_toBottomOf="@+id/paintView"></com.hcmes.viewdemo.l6.Bezier>

        <com.hcmes.viewdemo.l6.Bezier2
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:layout_constraintTop_toBottomOf="@+id/bezier"></com.hcmes.viewdemo.l6.Bezier2>
        <com.hcmes.viewdemo.l6.AnimWaveView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_margin="10dp"/>

        <com.hcmes.viewdemo.l6.BitmapShadowView
            android:layout_width="match_parent"
            android:layout_height="300dp"></com.hcmes.viewdemo.l6.BitmapShadowView>
        <com.hcmes.viewdemo.l6.TelescopeView
            android:layout_width="match_parent"
            android:layout_height="300dp"></com.hcmes.viewdemo.l6.TelescopeView>
        <com.hcmes.viewdemo.l6.ShimmerTextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="我要的闪光文字"></com.hcmes.viewdemo.l6.ShimmerTextView>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.core.widget.NestedScrollView>